doctype html
html
  head
    meta(charset='utf-8')
    title Colliding with the Terrain Model Component Demo
    meta(name='description', content='Colliding with the Terrain Model Component Demo')
    script(src='build.js')
    link(href="style.css", rel="stylesheet", media="all")
  body
    a-scene(antialias='true')
      //Assets
      a-assets
        img(id='sky' src='firstPanorama/2016_10_18_FirstPanorama.JPG')
      //Camera
      a-entity(position='0 0 0' rotation='0 0 0')
        a-entity(camera look-controls wasd-controls)
          a-entity(cursor='fuse: true; fuseTimeout: 500'
            position='0 0 -10'
            geometry='primitive: ring'
            material='color: black; shader: flat')
      //Terrain
      a-entity(id='landscape' position='0 100 0' terrain-model='DEM: url(aframe-terrain-model-component/docs/Olympic-Peninsula/data/clipped-envi.bin); texture: url(aframe-terrain-model-component/docs/Olympic-Peninsula/data/olympic-texture.jpg); planeWidth: 287; planeHeight: 151; segmentsWidth: 287; segmentsHeight: 151; zPosition: 50;' material-side-modifier-terrain-model cursor-listener-terrain)
      //Sky
      a-sky(src='#sky')
      //Light
      a-entity(light='type: ambient;')