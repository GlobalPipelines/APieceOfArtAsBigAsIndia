doctype html
html
  head
    meta(charset='utf-8')
    title A-Frame Mountain Component with Side-Modifier Component
    meta(name='description', content='A-Frame Mountain Component with Side-Modifier Component')
    script(src='build.js')
    link(href="style.css", rel="stylesheet", media="all")
  body
    a-scene(antialias='true')
      //Assets
      a-assets
        img(id='sky' src='firstPanorama/2016_10_18_FirstPanorama.JPG')
      //Camera
      a-entity(position='0 0 0' rotation='0 0 0')
        a-entity(camera look-controls wasd-controls)
      //Mountain, seems to be on a large scale!
      a-mountain(id='mountain' position='0 2000 0' material-side-modifier-mountain)
      //Sky
      a-sky(src='#sky')
      //Light
      a-entity(light='type: ambient;')