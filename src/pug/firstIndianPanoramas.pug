doctype html
html
  head
    meta(charset='utf-8')
    title First Panoramas from India
    meta(name='description', content='360 panoramas from the British Council Location in Delhi')
    script(src='build.js')
    link(href="style.css", rel="stylesheet", media="all")
  body
    a-scene()
      //Assets
      a-assets
        audio(id='click-sound' src='audio/click.ogg')
        img(id='India9' src='img/firstPanoramas/R0010009.jpg')
        img(id='India9-thumb' src='img/firstPanoramas/R0010009_thumb.jpg')
        img(id='India10' src='img/firstPanoramas/R0010010.jpg')
        img(id='India10-thumb' src='img/firstPanoramas/R0010010_thumb.jpg')
        img(id='India11' src='img/firstPanoramas/R0010011.jpg')
        img(id='India11-thumb' src='img/firstPanoramas/R0010011_thumb.jpg')
        img(id='India12' src='img/firstPanoramas/R0010012.jpg')
        img(id='India12-thumb' src='img/firstPanoramas/R0010012_thumb.jpg')
        img(id='India13' src='img/firstPanoramas/R0010013.jpg')
        img(id='India13-thumb' src='img/firstPanoramas/R0010013_thumb.jpg')
        img(id='India14' src='img/firstPanoramas/R0010014.jpg')
        img(id='India14-thumb' src='img/firstPanoramas/R0010014_thumb.jpg')
        img(id='India15' src='img/firstPanoramas/R0010015.jpg')
        img(id='India15-thumb' src='img/firstPanoramas/R0010015_thumb.jpg')
        img(id='India16' src='img/firstPanoramas/R0010016.jpg')
        img(id='India16-thumb' src='img/firstPanoramas/R0010016_thumb.jpg')
        img(id='India17' src='img/firstPanoramas/R0010017.jpg')
        img(id='India17-thumb' src='img/firstPanoramas/R0010017_thumb.jpg')
        img(id='India18' src='img/firstPanoramas/R0010018.jpg')
        img(id='India18-thumb' src='img/firstPanoramas/R0010018_thumb.jpg')
        img(id='India19' src='img/firstPanoramas/R0010019.jpg')
        img(id='India19-thumb' src='img/firstPanoramas/R0010019_thumb.jpg')
        img(id='India20' src='img/firstPanoramas/R0010020.jpg')
        img(id='India20-thumb' src='img/firstPanoramas/R0010020_thumb.jpg')
        img(id='India21' src='img/firstPanoramas/R0010021.jpg')
        img(id='India21-thumb' src='img/firstPanoramas/R0010021_thumb.jpg')
        img(id='India22' src='img/firstPanoramas/R0010022.jpg')
        img(id='India22-thumb' src='img/firstPanoramas/R0010022_thumb.jpg')
        img(id='India23' src='img/firstPanoramas/R0010023.jpg')
        img(id='India23-thumb' src='img/firstPanoramas/R0010023_thumb.jpg')
        //Specify Nunjucks
        script(id='link' type='text/nunjucks')
          a-plane(class='link' height='1' width='1'
          material='shader:flat; src: {{ thumb }}'
          event-set__1='_event: mousedown; scale: 1 1 1'
          event-set__2='_event: mouseup; scale: 1.2 1.2 1'
          event-set__3='_event: mouseenter; scale: 1.2 1.2 1'
          event-set__4='_event: mouseleave; scale: 1 1 1'
          set-image='on: click; target: #panorama; src: {{ src }}'
          sound='on: click; src: #click-sound'
          update-raycaster='#cursor'
          )
      //Panorama
      a-sky(id='panorama' radius='20' src='#India9')
      //Link
      a-entity(id='links' layout='type: box; columns: 4; margin: 1.5' position='-2.25 -2.25 -5')
        //Pass image sources to the template
        a-entity(template='src: #link' data-src='#India9' data-thumb='#India9-thumb')
        a-entity(template='src: #link' data-src='#India10' data-thumb='#India10-thumb')
        a-entity(template='src: #link' data-src='#India11' data-thumb='#India11-thumb')
        a-entity(template='src: #link' data-src='#India12' data-thumb='#India12-thumb')
        a-entity(template='src: #link' data-src='#India13' data-thumb='#India13-thumb')
        a-entity(template='src: #link' data-src='#India14' data-thumb='#India14-thumb')
        a-entity(template='src: #link' data-src='#India15' data-thumb='#India15-thumb')
        a-entity(template='src: #link' data-src='#India16' data-thumb='#India16-thumb')
        a-entity(template='src: #link' data-src='#India17' data-thumb='#India17-thumb')
        a-entity(template='src: #link' data-src='#India18' data-thumb='#India18-thumb')
        a-entity(template='src: #link' data-src='#India19' data-thumb='#India19-thumb')
        a-entity(template='src: #link' data-src='#India20' data-thumb='#India20-thumb')
        a-entity(template='src: #link' data-src='#India21' data-thumb='#India21-thumb')
        a-entity(template='src: #link' data-src='#India22' data-thumb='#India22-thumb')
        a-entity(template='src: #link' data-src='#India23' data-thumb='#India23-thumb')
      //Camera and Cursor
      a-entity(camera look-controls)
        a-cursor(id='cursor'
        animation__click='property: scale; startEvents: click; from: 0.1 0.1 0.1; to: 1 1 1; dur: 150'
        animation__fusing='property: fusing; startEvents: fusing; from: 1 1 1; to: 0.1 0.1 0.1; dur: 1500'
        event-set__1 = '_event: mouseenter; color: springgreen'
        event-set__2 = '_event: mouseleave; color: black'
        raycaster = 'objects: .link')