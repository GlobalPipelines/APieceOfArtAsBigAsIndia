doctype html
html
  head
    meta(charset='utf-8')
    title A Piece of Art as big as India AR Version
    meta(name='description', content='A Piece of Art as big as India AR Version')
    script(src='buildForRelease.js')
    link(href="style.css", rel="stylesheet", media="all")
  body
    video(class='bg-video')
    a-scene(antialias='true')
      //Camera
      a-entity(position='0 0 0' rotation='0 0 0')
        a-entity(camera look-controls)
      //Mountain, seems to be on a large scale!
      a-mountain(id='mountain' color='rgb(128,0,128)' shadowColor='rgb(255,165,0)' position='0 2000 0' material-side-modifier-mountain)
      //Light
      a-entity(light='type: ambient;')
